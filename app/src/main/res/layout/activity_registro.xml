<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registro"
    android:background="@drawable/gradinebg"
    >

    <ImageView
        android:id="@+id/imgpr"
        android:layout_width="118dp"
        android:layout_height="116dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="568dp"
        android:background="@drawable/social"
        android:backgroundTint="#187C22" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/imgpr"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="-52dp"
        android:gravity="center_horizontal"
        android:text="Sing Up"
        android:textColor="@color/amarilla"
        android:textSize="35dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="52dp"
        app:cardBackgroundColor="#9BD3B0"
        app:cardCornerRadius="50dp"
        app:cardElevation="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <EditText
                android:id="@+id/username"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/inputs_styles"
                android:hint="Username"
                android:textStyle="bold"
                android:textSize="22dp"
                android:paddingLeft="20dp"

                />
            <EditText
                android:id="@+id/password"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/inputs_styles"
                android:hint="Password"
                android:textStyle="bold"
                android:textSize="22dp"
                android:paddingLeft="20dp"

                />
            <EditText
                android:id="@+id/confirmpassword"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/inputs_styles"
                android:hint="Confirm-Password"
                android:textStyle="bold"
                android:textSize="22dp"
                android:paddingLeft="20dp"

                />

            <EditText
                android:id="@+id/correo"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="260dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/inputs_styles"
                android:hint="Email"
                android:textStyle="bold"
                android:textSize="22dp"
                android:paddingLeft="20dp"

                />

            <Button
                android:id="@+id/registrar"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="340dp"
                android:layout_marginLeft="25dp"
                android:gravity="center_horizontal"
                android:text="REGISTER"
                android:backgroundTint="#1F9517"
                app:cornerRadius="20dp"

                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/amarilla"
                />

            <Button
                android:id="@+id/yaacc"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="390dp"
                android:layout_marginLeft="25dp"
                android:gravity="center_horizontal"
                android:text="Already have ?"
                android:backgroundTint="#1F9517"
                app:cornerRadius="20dp"

                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/amarilla"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>





</RelativeLayout>