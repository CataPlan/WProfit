<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:background="@drawable/gradinebg"
    >

    <ImageView
        android:layout_width="118dp"
        android:layout_height="116dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="428dp"
        android:background="@drawable/social"
        android:backgroundTint="#187C22" />
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="102dp"
        app:cardBackgroundColor="#9BD3B0"
        app:cardCornerRadius="50dp"
        app:cardElevation="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <EditText
                android:id="@+id/username"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/inputs_styles"
                android:hint="Username"
                android:textStyle="bold"
                android:textSize="22dp"
                android:paddingLeft="20dp"

                />
            <EditText
                android:id="@+id/password"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/inputs_styles"
                android:hint="Password"
                android:textStyle="bold"
                android:textSize="22dp"
                android:paddingLeft="20dp"

                />


            <Button
                android:id="@+id/registrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="43dp"
                android:layout_marginBottom="12dp"

                android:backgroundTint="#1F9517"

                android:text="Sing up"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/iniciar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="171dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#1F9517"

                android:text="Sing In"
                app:cornerRadius="20dp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="37dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:text="Recover"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/recoveruser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:text="User?"
                android:textColor="#9A663E"
                />


        </LinearLayout>

    </com.google.android.material.textfield.TextInputLayout>



</RelativeLayout>